                                android:id="@+id/edPorcentaje4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="3"
                                android:ems="1"
                                android:inputType="number|numberDecimal"
                                android:maxLength="5"
